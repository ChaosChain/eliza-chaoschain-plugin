{
    "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "Node",
      "pretty": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "target": "es2020",
      "outDir": "plugin/dist",
      "experimentalDecorators": true,
      "strict": true,
      "baseUrl": "plugin",
      "paths": {
        "ai": ["plugin/patches/ai.d.ts"],
        "@elizaos/plugin-chaoschain": ["plugin/src"]
      },
      "skipLibCheck": true,
      "noImplicitAny": false,
      "typeRoots": ["./src/types", "./node_modules/@types"]
    },
    "include": ["plugin/**/*.ts", "src/**/*.ts"],
    "exclude": ["plugin/node_modules", "plugin/**/*.spec.ts"]
  }
  


