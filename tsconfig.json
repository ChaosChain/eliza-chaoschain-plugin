{
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "Node",
      "pretty": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "target": "es2021",
      "outDir": "./dist",
      "experimentalDecorators": true,
      "strict": true,
      "baseUrl": "./src",
      "paths": {
        "ai": ["src/patches/ai.d.ts"]
      },
      "skipLibCheck": true,
      "noImplicitAny": false
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "src/**/*.spec.ts"]
  }
  


